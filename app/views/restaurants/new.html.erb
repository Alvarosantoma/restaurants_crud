<h1>Create a new restaurant</h1>

<form action="/restaurants" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <label for="name">Name of the restaurant</label>
  <input type="text" name="restaurant_name">

  <label for="name">Address of the restaurant</label>
  <input type="text" name="restaurant_address">

  <label for="name">Stars of the restaurant</label>
  <input type="text" name="restaurant_stars">

  <input type="submit" value="Create!!">
</form>
